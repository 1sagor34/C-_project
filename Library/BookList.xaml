<Window x:Class="Library.BookList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="BookList" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ranurte-a-CnhYgTenY-unsplash.jpg"/>
        </Grid.Background>
        <DataGrid x:Name="datagd" HorizontalAlignment="Left" Height="394" VerticalAlignment="Top" Width="567" Margin="10,15,0,0"/>
        <Button Content="Previous page" FontSize="18" Foreground="red" FontFamily="Ravie" HorizontalAlignment="Left" Margin="602,364,0,0" VerticalAlignment="Top" Width="190" Height="45" Click="Button_Click"/>
        <Button Content="Search" FontSize="18" Foreground="red" FontFamily="Ravie" HorizontalAlignment="Left" Margin="602,240,0,0" VerticalAlignment="Top" Width="190" Height="43" Click="Button_Click_1"/>
        <TextBox x:Name="bnmre" HorizontalAlignment="Left" Height="50" Margin="602,174,0,0" TextWrapping="Wrap" Text="" FontSize="18" Foreground="Indigo" VerticalAlignment="Top" Width="190"/>
        <Label Content="Enter the book name" FontSize="18" Background="White" Foreground="BlueViolet" HorizontalAlignment="Left" Margin="602,127,0,0" VerticalAlignment="Top" Width="190" Height="42"/>
        <Label x:Name="lblerr" Content="" FontSize="18" Foreground="BlueViolet" HorizontalAlignment="Left" Margin="602,288,0,0" VerticalAlignment="Top" Width="190" Height="41"/>

    </Grid>
</Window>
